<% include ../partials/header %> 

<div class="container">
   <header class="jumbotron">
       <div class="container">
   </header>
   <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% profiles.forEach(function(profile){ %>
          <div class="col-md-3 col-sm-6">
            <p><%= profile.name %></p>
              <div id="dexList">
                 <%= profile.game.gameName %>
                 <div class="thumbnail">
                   <img src="/img/<%=profile.game.gameName%>.jpg">
                 </div>
                 <div class="caption">
                   <p><%= profile.bio %></p>
                 </div>
                 <p>
                  <a href="/profiles/<%= profile._id %>" class="btn btn-primary">More Info</a>
                 </p>
              </div>
          </div>
      <% }); %>
    </div>
</div>

<% include ../partials/footer %>
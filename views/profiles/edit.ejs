<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="well">
    <h1 style="text-align: center;">Create Your Profile</h1>
      <div style="width: 20%; margin: 20px auto;">
        <form class="form-horizontal" action="/profiles/<%=profile._id%>?_method=PUT" method="POST">
          <div class="form-group">
            <input type="text" name="profile[name]" value="<%=profile.name%>">
          </div>
          <div class="form-group">
            <input type="text" name="profile[bio]" value="<%= profile.bio %>">
          </div>
            <label class="dropdown" for="form-group">Game</label>
            <br>
            <select class="drop-down" name="profile[game][gameName]">
              <option value="DOTA2">DOTA2</option>
              <option value="Counterstrike">Counterstrike</option>
              <option value="LeagueofLegends">League of Legends</option>
            </select>
          <div class="form-group" class="center-block">
          <button style="margin-top: 15px; margin-left: 35px" class="btn btn-primary btn-lg btn-success">Submit</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  </div>
  
<% include ../partials/footer %>
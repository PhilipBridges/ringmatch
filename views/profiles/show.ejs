<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div id="showSel" class="col-md-3">
        <div class="list-group">
            <li class="list-group-item"> <h3><%= profile.name %></h3></li>
            <li class="list-group-item"><%= profile.bio %></li>
            <img id="gameImg" class="list-group-item" src="/img/<%=profile.game.gameImg%>.jpg">
            </div>
        </div>
    </div>
    <div class="container">
      <a id="addPlayer" class="btn btn-primary" href="/profiles/<%=profile.id%>/add">Add Player</a>
    </div>
    <div>
      <div>
        <a id="addComment" class="btn btn-success" href="/profiles/<%=profile._id%>/comments/new">Add New Comment</a>
      </div>
    </div>
    <% profile.comments.forEach(function(comment){%>
    <div class="row">
      <div class="col-md-12">
        <strong><%= profile.author.username%></strong>
        <p id="commentDate"><%= comment.date%> @ <%= comment.time%>
        </p>
        <div id="commentText" class="well">
          <%=comment.text%>
        </div>
      </div>
    </div>
      
    </p>
    <% }) %>
    <% if(currentUser && profile.author.id.equals(currentUser._id)){ %>
    <a class="btn btn-xs btn-warning" href="/profiles/<%=profile._id%>/edit">Edit</a>
    <form id="delete-form" action="/profiles/<%=profile.id%>?_method=DELETE" method="POST">
      <button class="btn btn-xs btn-danger">Delete</button>
    </form>
    <% } %>
</div>


<% include ../partials/footer %>

